<%- include ("partials/header") -%>
<div class="container">
    <h2 class="text-center"><%= movie.title %></h2>
    <div class="text-center mb-3"> <img src="<%= movie.image%>"></div>
    <p class="text-justify text-center"><%= movie.body %></p>
    <p class="text-center">Released on: <em><%= movie.Date.toDateString()%></em></p>
    <div class="text-center">
        <a href="/movies/<%=movie._id%>/edit" class="card-link btn btn-primary mr-3">Edit</a>
        <form action="/movies/<%=movie._id%>?_method=DELETE" method="post" id="delete">
            <button class="btn btn-outline-danger" >Delete</button>
        </form>
    </div>
</div>

<%- include ("partials/footer") -%>