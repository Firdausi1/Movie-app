<h1 class="text-center">Edit comment</h1>

<form action="/movies/<%=movie_id%>/comments/<%=comment._id%>?_method=PUT" method="POST">
<div class="form-group">
    <label for="text">Comment Text</label>
    <textarea type="text" name="comment[text]" class="form-control" id="text" rows="3"><%=comment.text%></textarea>
  </div>
  
  <input type="submit" class="btn btn-primary btn-lg">
</form>
</div>
