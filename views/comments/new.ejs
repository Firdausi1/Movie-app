<%- include ("../partials/header") -%>
<div class="container my-5">
<h1 class="text-center">Add new comment to <%=movie.title%></h1>

<form action="/movies/<%=movie._id%>/comments" method="POST">
<div class="form-group">
    <label for="text">Comment Text</label>
    <input type="text" placeholder="Title" name="comment[text]" class="form-control" id="text">
  </div>
  <div class="form-group">
    <label for="author">Author</label>
    <input type="text" placeholder="Author" name="comment[author]" class="form-control" id="author">
  </div>
  <input type="submit" class="btn btn-primary btn-lg">
</form>
</div>
<%- include ("../partials/footer") -%>
