<%- include ("partials/header") -%>

<div class="container my-5">
    <h1 class="text-center">Edit <%= movie.title %> </h1>
    
    <form action="/movies/<%= movie._id %>?_method=PUT" method="POST">
    <div class="form-group">
        <label for="title">Movie Title</label>
        <input type="text" placeholder="Title" name="movie[title]" class="form-control" id="title" value="<%=movie.title%>">
      </div>
      <div class="form-group">
        <label for="image">Image Url</label>
        <input type="text" placeholder="Image Url" name="movie[image]" class="form-control" id="image" value="<%=movie.image%>">
      </div>
      <div class="form-group">
        <label for="body">Movie Description</label>
        <textarea class="form-control" name="movie[body]" id="body" rows="3"><%=movie.body%></textarea>
      </div>
      <input type="submit" class="btn btn-primary btn-lg">
    </form>
    </div>

<%- include ("partials/footer") -%>