<%- include ("../partials/header") -%>
<div class="container my-5">
<h1 class="text-center">Add new Movies</h1>

<form action="/movies" method="POST">
<div class="form-group">
    <label for="title">Movie Title</label>
    <input type="text" placeholder="Title" name="movie[title]" class="form-control" id="title">
  </div>
  <div class="form-group">
    <label for="image">Image Url</label>
    <input type="text" placeholder="Image Url" name="movie[image]" class="form-control" id="image">
  </div>
  <div class="form-group">
    <label for="body">Movie Description</label>
    <textarea class="form-control" name="movie[body]" id="body" rows="3"></textarea>
  </div>
  <div class="form-group">
    <label for="cast">casts</label>
    <input class="form-control" name="cast" id="cast">
  </div>
  <div class="form-group">
    <label for="director">Director</label>
    <input class="form-control" name="movie[director]" id="director">
  </div>
  <input type="submit" class="btn btn-primary btn-lg">
</form>
</div>
<%- include ("../partials/footer") -%>